<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivity">

    <TextView
        android:id="@+id/pagename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="14dp"
        android:text="씨리얼님의 케이지 목록"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pagename">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagelizard"
                    android:layout_width="40dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/lizard" />

                <TextView
                    android:id="@+id/group_lizard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Lizard"
                    android:textColor="#575757"
                    android:textSize="25sp" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/testbtn1"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/material_dynamic_neutral80"
                        android:drawableTop="@drawable/btnlizardxml"
                        android:text="roro"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/testbtn2"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_margin="10dp"
                        android:text="Button" />

                    <Button
                        android:id="@+id/testbtn3"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_margin="10dp"
                        android:text="Button" />

                    <Button
                        android:id="@+id/testbtn4"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_margin="10dp"
                        android:text="Button" />

                    <Button
                        android:id="@+id/testbtn5"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_margin="10dp"
                        android:text="Button" />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageturtle"
                    android:layout_width="40dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/turtle" />

                <TextView
                    android:id="@+id/group_turtle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Turtle"
                    android:textColor="#575757"
                    android:textSize="25sp" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/testbtn6"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/material_dynamic_neutral80"
                        android:drawableTop="@drawable/btnturtlexml"
                        android:text="Button"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/testbtn7"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_margin="10dp"
                        android:text="Button" />

                    <Button
                        android:id="@+id/testbtn8"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_margin="10dp"
                        android:text="Button" />

                    <Button
                        android:id="@+id/testbtn9"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_margin="10dp"
                        android:text="Button" />

                    <Button
                        android:id="@+id/testbtn10"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_margin="10dp"
                        android:text="Button" />
                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/nextpagebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MainActivity"
                android:layout_marginTop="50dp"
                />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>